<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Sky Gradient -->
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="60%" style="stop-color:#0f766e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#065f46;stop-opacity:1" />
    </linearGradient>
    
    <!-- Mountain Gradient -->
    <linearGradient id="mountainGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#374151;stop-opacity:0.9" />
      <stop offset="50%" style="stop-color:#1f2937;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#111827;stop-opacity:0.7" />
    </linearGradient>
    
    <!-- Cloud Gradient -->
    <radialGradient id="cloudGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.8" />
      <stop offset="70%" style="stop-color:#f3f4f6;stop-opacity:0.4" />
      <stop offset="100%" style="stop-color:#e5e7eb;stop-opacity:0.1" />
    </radialGradient>
    
    <!-- Light Ray Gradient -->
    <linearGradient id="lightRay" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:0.3" />
      <stop offset="50%" style="stop-color:#f59e0b;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#d97706;stop-opacity:0.1" />
    </linearGradient>
  </defs>
  
  <!-- Sky Background -->
  <rect width="1920" height="1080" fill="url(#skyGradient)" />
  
  <!-- Mountain Silhouettes -->
  <path d="M0,1080 L0,600 Q200,550 400,580 Q600,520 800,560 Q1000,500 1200,540 Q1400,480 1600,520 Q1800,460 1920,500 L1920,1080 Z" 
        fill="url(#mountainGradient)" opacity="0.8" />
  
  <path d="M0,1080 L0,700 Q150,650 300,680 Q450,620 600,660 Q750,600 900,640 Q1050,580 1200,620 Q1350,560 1500,600 Q1650,540 1800,580 Q1860,560 1920,570 L1920,1080 Z" 
        fill="url(#mountainGradient)" opacity="0.6" />
  
  <!-- Clouds -->
  <ellipse cx="300" cy="200" rx="120" ry="60" fill="url(#cloudGradient)" opacity="0.7" />
  <ellipse cx="280" cy="180" rx="80" ry="40" fill="url(#cloudGradient)" opacity="0.5" />
  <ellipse cx="320" cy="190" rx="100" ry="50" fill="url(#cloudGradient)" opacity="0.6" />
  
  <ellipse cx="800" cy="150" rx="150" ry="75" fill="url(#cloudGradient)" opacity="0.6" />
  <ellipse cx="780" cy="130" rx="100" ry="50" fill="url(#cloudGradient)" opacity="0.4" />
  <ellipse cx="820" cy="140" rx="120" ry="60" fill="url(#cloudGradient)" opacity="0.5" />
  
  <ellipse cx="1400" cy="250" rx="100" ry="50" fill="url(#cloudGradient)" opacity="0.5" />
  <ellipse cx="1380" cy="230" rx="70" ry="35" fill="url(#cloudGradient)" opacity="0.3" />
  
  <!-- Light Rays -->
  <path d="M1200,0 L1300,300 L1250,300 L1150,0 Z" fill="url(#lightRay)" opacity="0.4" />
  <path d="M1300,0 L1400,350 L1350,350 L1250,0 Z" fill="url(#lightRay)" opacity="0.3" />
  <path d="M1400,0 L1500,400 L1450,400 L1350,0 Z" fill="url(#lightRay)" opacity="0.2" />
  
  <!-- Atmospheric Haze -->
  <rect width="1920" height="1080" fill="url(#skyGradient)" opacity="0.1" />
  
  <!-- Vignette Effect -->
  <defs>
    <radialGradient id="vignette" cx="50%" cy="50%" r="70%">
      <stop offset="0%" style="stop-color:#000000;stop-opacity:0" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:0.4" />
    </radialGradient>
  </defs>
  <rect width="1920" height="1080" fill="url(#vignette)" />
</svg>